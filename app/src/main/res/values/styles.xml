    <style name="Widget.AppTheme.LikeCheckBox" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="icon">@drawable/ic_like_24dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="backgroundTint">@color/light_silver</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/button_size</item>
        <item name="android:minHeight">@dimen/button_size</item>
    </style>

    <style name="Widget.AppTheme.ShareCheckBox" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="icon">@drawable/ic_share_24</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="backgroundTint">@color/light_silver</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/button_size</item>
        <item name="android:minHeight">@dimen/button_size</item>
    </style>

    <style name="Widget.AppTheme.ViewCheckBox" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="icon">@drawable/ic_baseline_remove_red_eye_24</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="backgroundTint">@color/light_silver</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/button_size</item>
        <item name="android:minHeight">@dimen/button_size</item>
    </style>

    <style name="Widget.App.MenuCheckBox" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="iconPadding">0dp</item>
        <item name="icon">@drawable/ic_more_vert_24</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/button_size_large</item>
        <item name="android:minHeight">@dimen/button_size_large</item>
    </style>

</resources>